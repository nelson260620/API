@model ProyectSoftware.Web.DTOs.UserDTO

<div class="col-md-6">
    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayFor(model => model.FirstName)">
        <label asp-for="FirstName" class="control-label"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
</div>

<div class="col-md-6">
    <div class="form-floating">
        <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayFor(model => model.LastName)">
        <label asp-for="LastName" class="control-label"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
</div>

<div class="col-md-6">
    <div class="form-floating">
        <input asp-for="PhoneNumber" class="form-control form-control-user1" placeholder="Teléfono">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
</div>


<div class="col-md-6">
    <div class="form-floating">
        <input asp-for="Document" class="form-control form-control-user1" placeholder="@Html.DisplayFor(model => model.Document)">
        <label asp-for="Document" class="control-label"></label>
        <span asp-validation-for="Document" class="text-danger"></span>
    </div>
</div>

<div class="col-md-6">
    <div class="form-floating">
        <select asp-for="ProyectSoftwareRoleId" asp-items="Model.ProyectSoftwareRole" class="form-control"></select>
        <label asp-for="ProyectSoftwareRoleId" class="control-label"></label>
        <span asp-validation-for="ProyectSoftwareRoleId" class="text-danger"></span>
    </div>
</div>