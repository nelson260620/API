@model IEnumerable<ProjectSoftware.Web.DTOs.SongDTO>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>SolMusic | Song List</title>
    <meta charset="UTF-8">
    <meta name="description" content="SolMusic HTML Template">
    <meta name="keywords" content="music, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="shortcut icon" />

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/theme/playlist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/theme/playlist/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/theme/playlist/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="/theme/playlist/css/slicknav.min.css" />
    <link rel="stylesheet" href="/theme/playlist/css/style.css" />
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section clearfix">
        <a href="index.html" class="site-logo">
            <img src="/theme/playlist/img/logo.png" alt="">
        </a>
        <ul class="main-menu">
            <li><a href="@Url.Action("Dashboard", "Home")">Inicio</a></li>
            <li>
                <a href="#">Pages</a>
                <ul class="sub-menu">
                    <li><a href="@Url.Action("Index", "Song")">Song</a></li>
                    <li><a href="@Url.Action("Index", "Playlist")">Playlist</a></li>
                </ul>
            </li>
        </ul>
    </header>
    <!-- Header section end -->
    <!-- Contenido de la página -->
    <section class="songs-section">
        <div class="container">
            <h1>Song List</h1>
            <a href="@Url.Action("Create", "Song")" class="btn btn-primary">Create New Song</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Artist</th>
                        <th>Audio</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var song in Model)
                    {
                        <tr>
                            <td>@song.Title</td>
                            <td>@song.Artist</td>
                            <td>
                                @if (!string.IsNullOrEmpty(song.AudioUrl))
                                {
                                    <audio controls>
                                        <source src="@song.AudioUrl" type="audio/mpeg">
                                        Your browser does not support the audio element.
                                    </audio>
                                }
                                else
                                {
                                    <span>No Audio</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(song.ImageUrl))
                                {
                                    <img src="@song.ImageUrl" alt="Song Image" width="100">
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Song", new { id = song.Id })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("Delete", "Song", new { id = song.Id })" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <!-- Footer section -->
    <footer class="footer-section">
        <div class="container">
            <p>2023 SolMusic, All Rights Reserved</p>
        </div>
    </footer>

    <!--====== Javascripts & Jquery ======-->
    <script src="/theme/playlist/js/jquery-3.2.1.min.js"></script>
    <script src="/theme/playlist/js/bootstrap.min.js"></script>
    <script src="/theme/playlist/js/jquery.slicknav.min.js"></script>
    <script src="/theme/playlist/js/owl.carousel.min.js"></script>
    <script src="/theme/playlist/js/mixitup.min.js"></script>
    <script src="/theme/playlist/js/main.js"></script>
</body>
</html>
