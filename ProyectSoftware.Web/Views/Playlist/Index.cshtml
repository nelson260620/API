                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer section end -->
    <!--====== Javascripts & Jquery ======-->
    <script src="/theme/playlist/js/jquery-3.2.1.min.js"></script>
    <script src="/theme/playlist/js/bootstrap.min.js"></script>
    <script src="/theme/playlist/js/jquery.slicknav.min.js"></script>
    <script src="/theme/playlist/js/owl.carousel.min.js"></script>
    <script src="/theme/playlist/js/mixitup.min.js"></script>
    <script src="/theme/playlist/js/main.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var containerEl = document.querySelector('.playlist-area');
            if (containerEl) {
                mixitup(containerEl);
            }
        });
    </script>
</body>
</html>
